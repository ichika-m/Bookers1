<body>
<header>
  <h1>Books</h1>
  </header>


    <div class ="success">
      <%= flash[:notice] %>
    </div>
<table>
  <thead>
<th>Title</th>
<th>Body</th>
<th colspan="3"></th>
</thead>

<tbody>
   <% @books.each do |book| %>
   <tr>
   <td><%= book.title %></td>
    <td><%= book.body %></td>
 <td><%= link_to 'Show', book_path(book.id), method: :get, class: "link" %></td>
 <td><%= link_to "Edit", edit_book_path(book.id) %></td>
<td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
</tr>
    <% end %>
 </tbody>
  </table>

</body>
<div class="new">
  <div class="newbook">
<h2>New book</h2>
<% if @book.errors.any? %>
<%= @book.errors.count %>errors prohibited this book from being saved:
<ul>
  <% @book.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>
</div>
<div class ="newtitle">
<%= form_with model: @book, url: '/books', method: :post do |f| %>
<p>Title</p>
<%= f.text_field :title %>

<p>Body</p>
<%= f.text_area :body %><br>


<%= f.submit 'Create Book' %>
<% end %>
</div>
</div>
